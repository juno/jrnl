<h1>Administration</h1>
<%= content_tag(:div,
                link_to('Sign out',
                        [:destroy, current_user, :session]),
                class: 'sign-out') %>
<%= content_tag(:div, link_to('New post', new_post_path)) %>
<table class="posts">
  <thead>
    <th>Created at</th>
    <th>Title</th>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <%= content_tag_for(:tr, post) do %>
        <td style="white-space:nowrap">
          <%= post.created_at.strftime('%Y-%m-%d') %>
        </td>
        <td>
          <%= post.title %><br>
          <%= link_to('Show', post) %>
          -
          <%= link_to('Edit', edit_post_path(post)) %>
          -
          <%= link_to('Delete',
                      post,
                      method: :delete,
                      data: { confirm: 'Are you ok?' }) %>
        </td>
      <% end %>
    <% end %>
  </tbody>
</table>
<%= paginate @posts %>
