<% title @post.title -%>

<article class="post">
  <header>
    <h1><%= link_to @post.created_at, @post %></h1>
  </header>
  <div class="content">
    <%= raw @post.html %>
  </div>
</article>

<% if current_user -%>
  <%= link_to 'Edit', edit_post_path(@post) %>
  <%= link_to 'Delete', @post, :confirm => 'Are you ok?', :method => :delete %>
<% end -%>
