<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : 'Sooey' %></title>
    <%= csrf_meta_tag %>

    <%= stylesheet_link_tag :all %>
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="alternate" type="application/rss+xml" href="http://feeds.feedburner.com/Sooey" />

    <%= javascript_include_tag :defaults %>
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-17293111-2']);
      _gaq.push(['_trackPageview']);
      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>

    <script type="text/javascript" src="http://www.observerapp.com/record.js"></script>
    <script type="text/javascript">try { Observerapp.record("4c8dd5f1e697483134009cba"); } catch(e) {};</script>

    <script src="http://platform.twitter.com/anywhere.js?id=ua931JjzNdqgvz2B0S85jA&amp;v=1"></script>
    <script type="text/javascript">
      twttr.anywhere(function(T) { T('article.post .content').hovercards(); });
    </script>
  </head>

  <body>

    <div id="main">

       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

      <header>
        <h1 id="logo"><%= link_to 'Sooey', root_path %></h1>
      </header>

      <%= link_to('Sign out', [ :destroy, current_user, :session ], :class => 'signOut') if current_user %>

      <section id="social">
        <ul>
          <li><a href="http://twitter.com/junya">twitter</a></li>
          <li><a href="http://sooey.tumblr.com/">tumblr</a></li>
          <li><a href="http://facebook.com/junya.ogura">facebook</a></li>
          <li><a href="http://pinboard.in/u:junya/">pinboard</a></li>
          <li><a href="http://www.flickr.com/photos/sooey/">flickr</a></li>
        </ul>
      </section>

      <div id="content">
        <%= yield %>
      </div>

      <footer>
        <address>Junya Ogura &lt;junyaogura@gmail.com&gt;</address>
        <p class="copyright">
          <a rel="license" href="http://creativecommons.org/licenses/by-nd/3.0/"><img alt="Creative Commons License" style="border-width:0" src="http://i.creativecommons.org/l/by-nd/3.0/80x15.png" /></a>
        </p>
      </footer>

      <div class="autopagerize_insert_before"></div>
    </div>

    <script src="/javascripts/jquery.embedly.min.js"></script>

  </body>
</html>
